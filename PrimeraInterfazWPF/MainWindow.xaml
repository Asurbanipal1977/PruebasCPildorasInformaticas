        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrimeraInterfazWPF"
        mc:Ignorable="d"
        Title="Mi Primera Ventana" Height="450" Width="900">
